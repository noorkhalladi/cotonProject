{% extends 'base.html.twig' %}

{% block title %}Facture Globale{% endblock %}
{% block head %}
  <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="css/style.css">
{% endblock %}
{% block body %}

    <section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Liste des factures globaux</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="table-wrap">
						<table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero du Facture Globale</th>
                <th>Date</th>
                <th>Modalite de Paiement</th>
                <th>Date de Paiement</th>
                <th>Observation</th>
                <th>Credit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture_globale in facture_globales %}
            <tr>
                <td>{{ facture_globale.id }}</td>
                <td>{{ facture_globale.numFactG }}</td>
                <td>{{ facture_globale.date ? facture_globale.date|date('Y-m-d') : '' }}</td>
                <td>{{ facture_globale.modPaie }}</td>
                <td>{{ facture_globale.datePaie ? facture_globale.datePaie|date('Y-m-d') : '' }}</td>
                <td>{{ facture_globale.obs }}</td>
                <td>{{ facture_globale.credit }}</td>
                <td>
                    <a href="{{ path('facture_globale_show', {'id': facture_globale.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('facture_globale_edit', {'id': facture_globale.id}) }}"class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a href="{{ path('facture_globale_new') }}"class="btn btn-warning">Create new</a>

	</div>
				</div>
			</div>
		</div>
	</section>

	<script src="js/jquery.min.js"></script>
  <script src="js/popper.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/main.js"></script>
{% endblock %}
